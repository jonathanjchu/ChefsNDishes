@model ChefsNDishes.Models.Chef

<div class="container">
    <form action="/chefs/new" method="POST" class="form">
        <div class="row">
            <div class="col-1">
                <a href="/chefs">Back</a>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <span asp-validation-for="FirstName" class="text-danger"></span><br />
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                
                <div class="form-group">
                    <span asp-validation-for="LastName" class="text-danger"></span><br />
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <span asp-validation-for="Birthday" class="text-danger"></span><br />
                    <label asp-for="Birthday"></label>
                    <input asp-for="Birthday" class="form-control" />
                </div>
                
                <input type="submit" value="Add Chef" class="btn btn-primary mt-5" />
            </div>
        </div>
    </form>
</div>